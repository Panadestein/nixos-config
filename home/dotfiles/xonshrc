$PROMPT="{BOLD_RED}[{BOLD_BLUE}π {BOLD_WHITE}→ {BOLD_YELLOW}{cwd_base}{BOLD_RED}]{curr_branch: {GREEN}[{}]} "

#--------------------------
# Aliases
#--------------------------

# Emacs
aliases['e'] = 'emacsclient'
