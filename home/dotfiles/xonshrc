# (Neo)vim
aliases['v'] = 'nvim'
aliases['cfv'] = 'vim ~/.vimrc'
aliases['sv'] = 'sudo nvim'
aliases['cfn'] = 'neovide --maximized ~/.config/nvim/init.vim'
aliases['n'] = 'neovide --maximized'

# Generic
aliases['c'] = 'code -r'
aliases['r'] = 'ranger'
